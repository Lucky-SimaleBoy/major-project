<% layout('layouts/boilorPlate.ejs') %> 
<body>
  <div class="filter">
   
  </div>
  <div class="listing-grid row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4 justify-content-center">
    <% for(let listing of allListings){ %>
      <a href="/listing/<%= listing._id %>" class="listing-links">
        <div class="card listing-grid-card h-100 animate-listing-card">
          <img src="<%= listing.image && listing.image.url ? listing.image.url : '' %>" class="card-img-top" style="height: 18rem; object-fit: cover;" alt="listing-img">
          <div class="card-img-overlay"></div>
          <div class="card-body d-flex flex-column justify-content-end">
            <p class="card-text mb-0">
              <b><%= listing.title %></b>
              <br>
              &#8377;<%= listing.price && listing.price.toLocaleString ? listing.price.toLocaleString("en-in") : listing.price %>  
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>
</body>
        
      
 
