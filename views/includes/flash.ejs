<% if (typeof success !== 'undefined' && success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show mt-3 animate__animated animate__fadeInDown" role="alert" style="font-weight:500;">
    <i class="fas fa-check-circle me-2"></i>
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"/>
<% } %>
<!-- error flash -->
<% if (typeof error !== 'undefined' && error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show mt-3 animate__animated animate__fadeInDown" role="alert" style="font-weight:500;">
      <i class="fas fa-check-circle me-2"></i>
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"/>
  <% } %>


  